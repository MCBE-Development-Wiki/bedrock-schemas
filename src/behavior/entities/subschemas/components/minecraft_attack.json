{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "bedrock_schemas.behavior.entities.minecraft:attack",
    "title": "minecraft:attack",
    "description": "Defines an entity's melee attack and any additional effects on it.",
    "type": "object",
    "properties": {
        "damage": {
            "oneOf": [
                {
                    "type": "integer"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "integer"
                    }
                }
            ]
        },
        "effect_duration": {
            "type": "number",
            "default": 0.0,
            "minimum": 0.0
        },
        "effect_name": {
            "type": "string",
            "description": "Specifies the vanilla effect to trigger when using the attack.",
            "enum": [
                "absorption",
                "bad_omen",
                "blindness",
                "conduit_power",
                "fatal_poison",
                "fire_resistance",
                "haste",
                "health_boost",
                "village_hero",
                "hunger",
                "instant_damage",
                "instant_health",
                "invisibility",
                "jump_boost",
                "levitation",
                "nausea",
                "night_vision",
                "poison",
                "regeneration",
                "resistance",
                "saturation",
                "slow_falling",
                "slowness",
                "speed",
                "strength",
                "water_breathing",
                "weakness",
                "wither"
            ]
        }
    }
}