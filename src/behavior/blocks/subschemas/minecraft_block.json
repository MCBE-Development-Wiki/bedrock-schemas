{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "bedrock_schemas.behavior.blocks.block",
    "type": "object",
    "title": "`minecraft:block` Object",
    "description": "The main area to define an block.",
    "properties": {
        "description": {
            "type": "object",
            "title": "Block Description",
            "description": "The block description.",
            "properties": {
                "identifier": {
                    "type": "string",
                    "title": "Block Identifier",
                    "description": "The block identifier."
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "construction",
                        "nature",
                        "equipment",
                        "items",
                        "commands",
                        "none"
                    ],
                    "$comment": "version:1.10|1.16.100|[1.17.0,1.20.20)"
                },
                "menu_category": {
                    "type": "object",
                    "properties": {
                        "category": {
                            "type": "string",
                            "enum": [
                                "construction",
                                "nature",
                                "equipment",
                                "items",
                                "none"
                            ]
                        },
                        "group": {
                            "type": "string"
                        },
                        "is_hidden_in_commands": {
                            "type": "boolean",
                            "default": false
                        }
                    },
                    "$comment": "version:[1.20.20,*)"
                }
            }
        },
        "components": {
            "type": "object",
            "properties": {
            },
            "patternProperties": {},
            "required": []
        },
        "events": {
            "type": "object",
            "properties": {
                
            },
            "additionalProperties": {
                "$ref": "../../../common/definition/definition_event.json"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "description",
        "components"
    ]
}